<!DOCTYPE html>
<html>
  <head>
      <script src="/jquery/jquery.js"></script>
      <script>
          $('document').ready(function(){
            $('.btn').click(function() {
                $('.btn').not(this).removeClass('active');
                $(this).toggleClass('active');
            });
          });
      </script>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    {{{body}}}
  </body>
</html>
